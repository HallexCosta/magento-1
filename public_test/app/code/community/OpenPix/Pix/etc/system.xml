<?xml version="1.0"?>
<config>
    <sections>
        <payment>
            <groups>
                <openpix_pix translate="label" module="openpix_pix">
                    <label>OpenPix - Pix</label>
                    <sort_order>0</sort_order>
                    <expanded>1</expanded>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <comment>
                        <![CDATA[<a href="https://openpix.com.br/register" target="_blank">Click here to create an OpenPix account.</a>]]>
                        <![CDATA[<a href="https://developers.openpix.com.br/docs/ecommerce/magento1/magento1-plugin" target="_blank">Click configure your integration.</a>]]>
                    </comment>
                    <fields>
                        <oneclick_authentication>
                            <label>Authenticate on the platform using 1 click</label>
                            <comment><![CDATA[By pressing this button, you will be redirected to our platform where we will quickly configure a new integration.]]></comment>
                            <frontend_model>openpix_pix/adminhtml_config_oneclickButton</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </oneclick_authentication>

                        <app_ID>
                            <label>App ID</label>
                            <comment><![CDATA[Use the URL to register your webhook https://yourstore/index.php/openpix/webhook/]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </app_ID>
                        <active translate="label">
                            <label>Pix Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>2</sort_order>
                        </active>
                        <title translate="label">
                            <label>Pix Title</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>3</sort_order>
                        </title>
                        <order_status translate="label">
                            <label>Pix New Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_status>

                        <pix_parcelado_active translate="label">
                            <config_path>payment/openpix_pix_parcelado/active</config_path>
                            <label>OpenPix Parcelado Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>22</sort_order>
                        </pix_parcelado_active>
                        <pix_parcelado_title translate="label">
                            <config_path>payment/openpix_pix_parcelado/title</config_path>
                            <label>OpenPix Parcelado Title</label>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <sort_order>23</sort_order>
                        </pix_parcelado_title>
                        <pix_parcelado_order_status translate="label">
                            <config_path>payment/openpix_pix_parcelado/order_status</config_path>
                            <label>OpenPix Parcelado New Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>24</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </pix_parcelado_order_status>
                    </fields>
                </openpix_pix>
            </groups>
        </payment>
    </sections>
</config>